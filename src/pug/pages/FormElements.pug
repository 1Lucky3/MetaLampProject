

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body 
    header.header-icon
      .header-icon__icon
    section.upper-section
      div.upper-section__fields
        include ../layouts/layouts-fields/field-default
        include ../layouts/layouts-fields/field-hoverfocus
        include ../layouts/layouts-fields/field-dropdown
        .datepickerfield
          include ../layouts/layouts-fields/field-datepicker
        div.datedropdown
          include ../../blocks/date-dropdown/date-dropdown
          +dateDropdown("date dropdown","date dropdown","ДД.ММ.ГГГГ","19.08.2019")
        include ../../blocks/filter-date-dropdown/filter-date-dropdown
        div.subscription
          div.head 
            span.bold-designation.head__text subscription text field
          include ../../blocks/subscription-field/subscription-field
          +subscription
      div.upper-section__rate-button
        include ../../blocks/buttons/checkbox-preferences/checkbox-preferences
        div.gender-buttons
          include ../../blocks/gender-buttons/gender-buttons
        div.toggle
          include ../../blocks/special-offer-toggle/special-offer-toggle
        div.like-button
          include ../../blocks/buttons/like-button/like-button
        include ../../blocks/rate-buttons/rate-button
      div.upper-section__buttons-slider
        div.range-slider
          include ../../blocks/buttons/range-slider/range-slider
        div.click-buttons
          include ../../blocks/click-me-button/click-me-buttons
        div.pay-button
          include ../../blocks/pay-button/pay-button-template
          +payButton("перейти к оплате")
        div.pagination
          include ../../blocks/buttons/pagination/pagination
    section.secondary-section
      div.secondary-section__left-dropdowns
        div.room-info
          div.room-info__dropdown
            .head
              span.bold-designation.head__text  dropdown
              span.normal-designation.caption__default default
            include ../../blocks/dropdowns/room-info-dropdown/room-info-dropdown
        div.checkbox-list
          include ../../blocks/dropdowns/conveniences-checkbox-dropdown/conveniences-checkbox-dropdown
      div.secondary-section__middle
        div.secondary-section__middle-dropdowns
          div.guest-dropdown__container1
            div.head 
              span.bold-designation.head__text dropdown
            include ../../blocks/guest-dropdown/guests-dropdown
        div.secondary-section__middle-others
          div.rich-checkbox__container
            include ../../blocks/buttons/rich-checkbox/rich-checkbox
          div.bullet-list__container
            div.head 
              span.bold-designation.head__text bullet list
            include ../../blocks/bullet-list/bullet-list
    section.footer-section
      .footer-section__left-container
        include ../../blocks/room-details/room-details
      .footer-section__right-container
        include ../../blocks/comment-block/comment-block
